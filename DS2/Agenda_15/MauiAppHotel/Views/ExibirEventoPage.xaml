<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ExibirEventoPage"
             Title="ExibirEvento"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="5"
                         Spacing="5">

        <Label Text="Detalhes do evento"
               FontFamily="Kalam"
               FontSize="45"
               TextColor="{StaticResource Primary}" />

        <Frame Padding="20" Margin="10" BackgroundColor="White">
            <VerticalStackLayout Spacing="7">

                <!-- Nome do evento -->
                <Label Text="Nome do evento"
                       TextColor="{StaticResource Primary}" />
                <Label Text="{Binding NomeEvento}"
                       TextColor="Black" />

                <!-- Data de início -->
                <Label Text="Data de início"
                       TextColor="{StaticResource Primary}" />
                <Label Text="{Binding DataInicio, StringFormat='{0:dd/MM/yyyy}'}"
                       TextColor="Black" />

                <!-- Data de término -->
                <Label Text="Data de término"
                       TextColor="{StaticResource Primary}" />
                <Label Text="{Binding DataTermino, StringFormat='{0:dd/MM/yyyy}'}"
                       TextColor="Black" />

                <!-- Número de participantes -->
                <Label Text="Numero de participantes"
                       TextColor="{StaticResource Primary}" />
                <Label Text="{Binding NumeroParticipantes}"
                       TextColor="Black" />

                <!-- Custo por participante -->
                <Label Text="Custo por participante"
                       TextColor="{StaticResource Primary}" />
                <Label Text="{Binding CustoPorParticipante}"
                       TextColor="Black" />

                <!-- Valor total do evento -->
                <Label Text="Valor total do evento"
                    TextColor="{StaticResource Primary}" />
                <Label Text="{Binding ValorTotal, StringFormat='{0:c}'}"
                    TextColor="Black" />

                <!-- Botão Voltar -->
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Button Text="Voltar" Clicked="Button_Clicked" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
